<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/locationSearchLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/locationSearchIcon"
            android:layout_width="20sp"
            android:layout_height="24sp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/location_pin"
            android:contentDescription="@string/app_name"/>

        <TextView
            android:id="@+id/locationSearchTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="샘터마을"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/locationSearchCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="주택>아파트"/>

    </LinearLayout>

    <TextView
        android:id="@+id/locationSearchAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationSearchLinear"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="경기도 고양시 덕양구 행신동 983"
        android:textSize="14sp"/>
</RelativeLayout>