<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/eventItemTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:text="17:30"
        style="@style/EventTime"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="eawf"
                android:textStyle="bold"
                android:layout_margin="6dp"
                style="@style/AppText"/>


            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/location_pin"
                android:layout_marginTop="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/eventItemLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍대입구역에서"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="10dp"
                style="@style/AppSmallText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="10dp"
                android:text="영화보기로함"
                android:maxLines="3"
                android:ellipsize="end"
                android:padding="2dp"
                style="@style/AppSmallText"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="2dp"
                android:src="@drawable/user"/>

            <TextView
                android:id="@+id/eventItemParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="김현승 외 4명"
                style="@style/AppSmallText"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>